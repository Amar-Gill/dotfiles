# vim
alias v="nvim"

# general
alias ls="ls -GH"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# git
alias ga="git add"
alias gdf="git diff"
alias gst="git status"
alias gcmsg="git commit -m"
alias gco="git checkout"
alias gs="git switch"
alias gp="git push"
alias gpf="git push --force-with-lease"
function gpu()
{
  branch="$(git branch --show-current)"
  [[ -z $branch ]] && return
  git push --set-upstream origin $branch
}

# thefuck
eval $(thefuck --alias)

# docker
function dc-fn() {
  docker compose $*
}
alias dc="dc-fn"

# kubernetes
alias k="kubectl"

function load-kubectl-autocompletion() {
  [[ $commands[kubectl] ]] && kubectl completion zsh > $HOME/zsh_plugins/kubectl/_kubectl
}

function source-kubectl-autocompletion() {
  [[ -f $HOME/zsh_plugins/kubectl/_kubectl ]] && source $HOME/zsh_plugins/kubectl/_kubectl && return
  load-kubectl-autocompletion
}
